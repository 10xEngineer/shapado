= stylesheet_link_tag '/javascripts/openid/css/style.css', :media => 'screen, projection'

.subtitle
  = t(".with_openid")
-if !logged_in?
  .box.highlight
    = t("layouts.application.openid.explaination")
    -form_tag session_path, :id => 'openid' do
      #nojsopenid
        = text_field_tag "openid_identifier", "", :id => "openid_username"
        = submit_tag t(".log_in")

.subtitle
  = t(".with_authentication")

%h2
  =t(".registered")

- form_tag session_path, :class => "form" do
  .field-group
    .label-container
      = label_tag 'login', t(:login, :scope => "activerecord.attributes.user")
    .field
      = text_field_tag 'login', @login, :class => "text-field"

  .field-group
    .label-container
      = label_tag t(:password, :scope => "activerecord.attributes.user")
    .field
      = password_field_tag 'password', nil, :class => "text-field"
  .field-group
    .field
      = submit_tag t(".log_in")

%h2
  = t(".not_registered")
-@user = User.new
-@user.password = @user.password_confirmation = nil
= error_messages_for :user
- form_for @user, :url => users_path, :html => {:class => "form"} do |f|
  =render :partial => "users/form", :locals => {:f => f}
  %p
    = submit_tag t('users.new.submit')

