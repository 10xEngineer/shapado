.group
  = form.label :type, t(:type, :scope=>"activerecord.attributes.flag"), :class => "label"
  -CloseRequest::TYPES.each do |type|
    = form.radio_button :reason, type, :class => "radio_button"
    = t(type, :scope=>"close_requests.form")
    %br

.group
  = form.label :comment, t(:comment, :scope=>"models"), :class => "label"
  = form.text_field :comment, :class => "text_field"

.group
  = check_box_tag "close"
  = t('.close_with_reason')
