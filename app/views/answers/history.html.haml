-content_for :subtabs do
  .navtitle
    &= "History (#{@answer.versions.count})"

%h2
  = link_to h(@question.title), question_path(current_languages, @question)

%h2.title
  Current Version
.markdown
  = shapado_auto_link(markdown(@answer["body"]))
.clear


#answers
  %h2.title
    Previous Versions
  -@answer.versions.each_with_index do |version, pos|
    .answer
      %h2.version_title
        %span.version
          &=pos
        version
      #question-body-col
        .markdown
          = find_and_preserve(shapado_auto_link(markdown(version["body"])))
        .controls
          .actions
            -if logged_in? && current_user.can_modify?(@answer)
              =link_to "set as current", rollback_question_answer_path(current_languages, @question, @answer, :version => pos), :method => :put
        .clear
      .clear
