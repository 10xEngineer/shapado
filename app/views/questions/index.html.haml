
.buttons
  = link_to I18n.t("views.layout.ask_question"), new_question_path, :class => "button"

%table.list
  - @questions.each do |question|
    %tr
      %td
        = h question.title
      %td
        = h truncate(question.body, :length => 30)
      %td
        = h question.user.login
      %td
        = h question.answered
      %td
        = link_to I18n.t("scaffold.show"), question
      -if logged_in? && current_user.can_modify?(question)
        %td
          = link_to I18n.t('scaffold.edit'), edit_question_path(question)
        %td
          = link_to I18n.t('scaffold.destroy'), question, :confirm => I18n.t("scaffold.sure", :model => "question"), :method => :delete
%br
