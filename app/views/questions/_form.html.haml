= f.error_messages
.field-group
  .label-container
    = f.label :title, t(:title, :scope => "activerecord.attributes.question")
  .field
    = f.text_field :title, :class => "text-field"
  .tip
    = t(".body_tip")

.field-group
  .label-container
    = f.label :body, t(:body, :scope => "activerecord.attributes.question")
  = f.text_area :body, :class => "text-area huge", :id => "markdown_editor"

  #markdown_preview.markdown

-if current_group.language.nil?
  .field-group
    .label-container
      = f.label :language, t(:language, :scope => "activerecord.attributes.question")
    .field
      -lang = @question.new? ? current_user.main_language : @question.language
      = f.select :language, languages_options(current_user.preferred_languages), :selected => lang
      .tip
        = t(".language_tip")
-else
  = f.hidden_field :language, :value => current_group.language

.field-group
  .label-container
    = f.label :tags, t(:tags, :scope => "activerecord.attributes.question")
  .field
    = f.text_field :tags, :value => @question.tags.join(", "),:class => "text-field"
    .tip
      = t(".tags_tip")
