%div{:data => {:role => "page"}}
  %div
    %h1
      %img{:src=> logo_path(current_group), :alt=>"Shapado Q&A", :width=>"235", :height=>"61"}

  %div{:data => {:role => "header"}}
    %h1
      Listing questions
    = link_to 'Ask Question', new_question_path(:format => "mobile"), "data-icon" => "plus", "class" => "ui-btn-right"

  %div{:data => {:role => "content"}}
    %ul{:data => {:role => "listview", :filter => "true"}}
      -@questions.each do |question|
        %li
          = link_to question.title, question_path(question, :format => "mobile")
          -if question.closed
            [closed]
          -if question.answered
            [answered]

          = link_to 'edit question', edit_question_path(question, :format => "mobile"), "data-icon" => "gear"

          %span{:class=>"ui-li-count"}
            =question.answers_count
            answers
  %div{:data => {:role => "footer"}}
    =will_paginate(@questions)