
-content_for :subtabs do
  .navtitle
    = t(".title")


%table.tag-list{:style => "width: 100%"}
  -@tag_cloud.each_slice(4) do |tags|
    %tr
      -tags.each do |tag|
        %td{:style => "line-height: 14px"}
          %span.tag
            =link_to h(tag["name"]), url_for(:controller => "questions", :action => "index", :tags => tag["name"]), :rel => "tag"
          %span{:style => "padding-left: 4px; clear:both"}
            %b
              x
              = h(tag["count"])
