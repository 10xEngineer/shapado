-feed_url = url_for(:format => "atom", :tags => params[:tags])

-content_for :rss do
  %link{:rel=>"alternate", :type=>"application/atom+xml", :title => "atom", :href=> url_for(:format => "atom", :tags => params[:tags])}
  %link{:rel=>"alternate", :type=>"application/atom+xml", :title => "atom", :href=> url_for(:format => "atom")}

-content_for :subtabs do
  .navtitle
    = t(".title")
    -if @questions
      == (#{@questions.total_entries})

  %ul{:style => "display: inline"}
    -if logged_in?
      %li.mytags
        = link_to t(".my_tags", :default => :"questions.unanswered.my_tags"), unanswered_questions_path(:sort=>"mytags")
    %li.newest
      = link_to t(".newest", :default => :"questions.index.newest"), unanswered_questions_path(:sort=>"newest")
    %li.votes
      = link_to t(".votes", :default => :"questions.index.votes"), unanswered_questions_path(:sort=>"votes")

-content_for :sidebar do
  .block
    %h1
      = t('.tags', :default => [:"layout.application.tags", :"activerecord.attributes.user.tags", "tags"]).capitalize
    = render :partial => "shared/tag_list", :object => @tag_cloud
  -if logged_in?
    = render :partial => "shared/preferred_tags"

/Questions
%ul.items#questions
  -if @questions.empty?
    %li.box.highlight
      = t(".empty")
  -@questions.each do |question|
    = render :partial => "question", :object => question

#additional_info
  =will_paginate @questions


