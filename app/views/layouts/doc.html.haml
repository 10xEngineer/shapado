!!! 5
%html{ "xml:lang" => I18n.locale, :lang => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      &= page_title
    = render "shared/layout/css"

    = raw(current_group.head_tag)
    = render "shared/layout/meta"
    <!--[if lt IE 8]><link type="text/css" rel="stylesheet" media="screen" href="/stylesheets/ie7.css"><![endif]-->
    = render "shared/layout/javascript"

    = csrf_meta_tag
    = render "shared/analytics"

  %body{:class => bodys_class(params) << "doc-layout" }
    = render :partial => "shared/topbar"
    #container
      #header
        = current_group.head
        #doc-main-bar
          #logo
            -if current_group.has_logo?
              =link_to image_tag(logo_path(current_group), :class => "group_logo"), domain_url(:custom => current_group.domain)
            -else
              = image_tag("default_logo.png", :class => "group_logo")

    #doc-wrapper
      #main-doc
        = yield
        .clear
    .clear
    #footer
      .block.content
        = render :partial => "shared/layout/footer"
