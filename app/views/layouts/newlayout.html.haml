!!! Strict
%html{ "xml:lang" => I18n.locale, :lang => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      &= page_title
    = render :partial => "shared/layout/meta"
    = render :partial => "shared/layout/javascript"
    = render :partial => "shared/layout/css"

  %body
    #container
      #header
        %h1
          =link_to image_tag(logo_group_path(current_group), :class => "group_logo"), domain_url(:custom => current_group.domain)
          = link_to h(current_group.name), current_group.domain
        #user-navigation
          /TODO: User nav
          .clear
        #main-navigation{:class => @active_tab}
          %ul
            %li.home
              -if logged_in?
                =link_to t(".dashboard"), dashboard_path
              -else
                =link_to t(".mainpage"), root_path
            -if logged_in?
              / TODO: tabs
          .clear
      #wrapper
        #main
          #block-text.block
            -if @active_tab
              .secondary-navigation{:class => @active_subtab.to_s}
                = render :partial => "/shared/subtabs/#{@active_tab}"
                .clear
            .content
              %p
                = show_flash_messages(:class => "flash")
              .inner
                = yield
        #sidebar
          = yield :sidebar
          .block.notice
            = render :partial => "shared/layout/notice"
          .block
            .sidebar-block
              = render :partial => "shared/layout/activities"
          -unless feed_urls.empty?
            .block
              %h3
                = t(".subscribe")
              .sidebar-block
                %ul.feeds
                  -feed_urls.each do |title, url|
                    %li
                      = link_to h(title), url
        .clear
      #footer
        .block
          %p
            Copyright &copy; 2009.
