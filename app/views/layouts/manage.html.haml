!!! Strict
%html{ "xml:lang" => I18n.locale, :lang => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    = render :partial => "layouts/head"

  %body
    #top_bar
      = render :partial => "shared/topbar"
    .two-column
      -if !AppConfig.system_notice.blank?
        #system-msg
          .internal
            = AppConfig.system_notice
      %br
      #navigation{:class => "#{@active_tab}"}
        #menu_primary
          = render :partial => "shared/manage_navigation"

      #main-content
        #messages
          -flash.each do |k,v|
            .message{:class => k.to_s}
              .internal.markdown
                = markdown(v)
        #layout
          #content{:style=>"width: 100%"}
            .internal
              = yield

          .clear
      #footer
        = render :partial => "layouts/footer"

      = render :partial => "shared/analytics"
      .clear
