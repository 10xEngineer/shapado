!!! 5
%html{"xml:lang" => I18n.locale, :lang => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      &= page_title
    = render "shared/layout/css"

    = raw(current_group.head_tag)
    = render "shared/layout/meta"
    <!--[if lt IE 8]><link type="text/css" rel="stylesheet" media="screen" href="/stylesheets/ie7.css"><![endif]-->
    = render "shared/layout/javascript"
    <link type="text/css" rel="stylesheet" media="screen" href="http://jqueryui.com/themes/base/jquery.ui.tabs.css">

    = csrf_meta_tag

  %body
    = render "shared/analytics"
    #container{:class => @current_class}

      %nav.top-bar

        %ul.group-list.sf-menu
          %li.group
            %small
              Active group:
            = link_to "West Coast Group"
            %ul
              %li
                = link_to "East coast Group of financial money bookers"
              %li
                = link_to "South Group"
              %li
                = link_to "North Group"

          -if !logged_in?
          - else
            //-if current_user.mod_of?(current_group)
            %li
              = link_to "Admin", manage_properties_path
              %ul
                %li
                  = link_to "Option"
                %li
                  = link_to "Option"
                %li
                  = link_to "Option"
            %li
              = link_to "Moderate", moderate_path
              %ul
                %li
                  = link_to "Option"
                %li
                  = link_to "Option"
                %li
                  = link_to "Option"

        .buscador
          %form#search
            .field
              %input


        -if !logged_in?
          /=multiauth_menu("Sign In")
          = multiauth_dropdown("Sign In")
        -else
          %ul.user-list.sf-menu
            %li.user
              //= link_to "#{avatar_img(current_user, {:size =>24})} #{current_user.login}", user_path(current_user)
              = link_to current_user.login, user_path(current_user)
              = avatar_img(current_user, {:size =>24})
              %ul
                %li
                  =link_to "Mi Karma: #{current_user.reputation_on(current_group)}"
                %li
                  =link_to "My badges", badges_path
                %li
                  =link_to "Followed", feed_user_path(current_user)
                %li
                  =link_to "All", questions_path
                %li
                  =link_to "By Me", by_me_user_path(current_user)
                %li
                  =link_to "Preferred", preferred_user_path(current_user)
                %li
                  =link_to "Contributed", contributed_user_path(current_user)
                %li
                  =link_to "Collaborate!", expertise_user_path(current_user)

            %li.logout
              =link_to t("layouts.application.logout"), destroy_user_session_path





      %section.left-panel
        .brand
          %h1
            // Im comment this just to not see the app broken :) you can uncomment without problem
            //-if current_group.has_logo?
            //=link_to image_tag(logo_path(current_group), :class => "group_logo", :width => current_group.logo_info["width"], :height => current_group.logo_info["height"]), domain_url(:custom => current_group.domain)
            //-else
            = link_to image_tag("shapado-brand.png", :class => "group_logo"), domain_url(:custom => current_group.domain)

        //= render "shared/user-zone"

        = render :partial => "shared/language_filter"

        .widget-links.module
          %h3 Group Links
          %nav
            %ul
              %li
                = link_to "Random question", random_questions_path(:unanswered => true)
              %li
                = link_to "Badges", badges_path
              %li
                = link_to "Pages", pages_path

        =render "widgets/tag_cloud", :widget => TagCloudWidget.new

        .widget-networks.module
          %h3  Siguenos y comparte:
          %ul
            %li
              =link_to "Facebook", "#", :class => "facebook", :rel => "nofollow"
            %li
              =link_to "Twitter", "#", :class => "twitter", :rel => "nofollow"
            %li
              =link_to "Digg", "#", :class => "digg", :rel => "nofollow"
            %li
              =link_to "Delicious", "#", :class => "delicious", :rel => "nofollow"
            %li
              -feed_urls.each do |title, url|
                %a{:href => url}
                  =image_tag "atom.png", :width => 20
          .clear

        .add
          %h6 Publicidad
          =link_to image_tag "http://www.bipbanners.co.uk/assets/images/WebConveyancing_Animated_SkyScraper_Banner_Sample_1A.gif"
        .module
          = form_tag search_index_path, :method => :get, do
            = text_field_tag :q, params[:q], :id => "search-field"

      %section.content-panel
        - unless params[:controller] =~ /moderate\//
          = render "shared/action-tabs"

        #main-content-wrap{:class => @active_tab}
          - if params[:controller] =~ /moderate\//
            = render "shared/moderate_navigation"
          = yield
          .clear

      %section.right-panel

        .add
          %h6 Publicidad
          =link_to image_tag "banner-250x250.jpg"

        = yield :sidebar

        = render "shared/ads/context_panel_ads"

        .clear
        = render "shared/ads/footer_ads"

      = render "shared/layout/footer"
