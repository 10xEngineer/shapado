!!! Strict
%html{"xml:lang" => I18n.locale, :lang => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      &= page_title
    = render "shared/layout/css"

    = raw(current_group.head_tag)
    = render "shared/layout/meta"
    <!--[if lt IE 8]><link type="text/css" rel="stylesheet" media="screen" href="/stylesheets/ie7.css"><![endif]-->
    = render "shared/layout/javascript"
    
    %script
      document.createElement('header');
      document.createElement('footer');
      document.createElement('section');
      document.createElement('aside');
      document.createElement('nav');
      document.createElement('article');
      document.createElement('hgroup');
 
  %body
    = render "shared/analytics"
    #container{:class => @current_class}
     
      %section.left-panel
        .brand
          %h1
            = link_to image_tag("shapado-brand.png", :class => "group_logo"), domain_url(:custom => current_group.domain)
          %small Simplemente &nbsp;&nbsp;&nbsp; &nbsp; Pregunta
          
        .ask
          %h2
            =link_to t("layouts.application.ask_question"), new_question_path, :rel => 'nofollow'       
              
        .user-zone.module
          .avatar
            = link_to image_tag("avatar-25.png")
          .greeting
            %small Bienvenido
            %b dgfrancisco
          .clear 
          %nav
            %ul
              %li.active
                =link_to "Mi perfil"
              %li
                =link_to "Mi Karma: 200"
              %li
                =link_to "Mis preguntas: [ 20 ]"
              %li
                =link_to "Mis respuestas: [ 5 ]"
              %li
                =link_to "Mis Badges"
              %li.log-out
                =link_to "Salir"
        
        .widget-links.module
          %nav
            %ul
              %li
                =link_to "Registration form"
              %li
                =link_to "Blog"
              %li
                =link_to "About us"
        
        .widget-tags.module
          %header Popular Tags
          %hgroup
            %ul
              %li
                =link_to "Size"
              %li.active
                =link_to "Alphabetically"
          %ul.tags-list
            %li
              =link_to "Alphabetically"
            %li
              =link_to "Alphabetically"                
            %li
              =link_to "Alphabetically"
            %li
              =link_to "Alphabetically"
            %li
              =link_to "Alphabetically"                
            %li
              =link_to "Alphabetically"              
            %li
              =link_to "Alphabetically"
            %li
              =link_to "Alphabetically"                
            %li
              =link_to "Alphabetically"              

        .widget-networks.module
          %p  Siguenos y comparte:
          %ul
            %li
              =link_to "Facebook", "#", :class => "facebook", :rel => "nofollow"
            %li
              =link_to "Twitter", "#", :class => "twitter", :rel => "nofollow"
            %li
              =link_to "Digg", "#", :class => "digg", :rel => "nofollow"
            %li
              =link_to "Delicious", "#", :class => "delicious", :rel => "nofollow"
          .clear
                                                        
      %section.content-panel
        = render "shared/topbar"
        #header
          = raw(current_group.head)
          #main-bar{:class => @active_tab}
            #logo{:style => "min-height: 63px"}
              -if current_group.has_logo?
                =link_to image_tag(logo_path(current_group), :class => "group_logo", :width => current_group.logo_info["width"], :height => current_group.logo_info["height"]), domain_url(:custom => current_group.domain)
              -else
                = link_to image_tag("default_logo.png", :class => "group_logo"), domain_url(:custom => current_group.domain)
            - if params[:controller] =~ %r{moderate\/\.*}
              = render "shared/moderate_navigation"
            - else
              = render "shared/user_navigation"
            .clear
  
            -announcements = current_announcements(session[:announcement_hide_time])
            -unless announcements.empty?
              #announcement
                #announcement_message
                  -announcements.each do |announcement|
                    =markdown(announcement.message)
                =link_to "Close", hide_announcements_path, :id => "hide_announcement"
                .clear
  
            -if !logged_in?
              -if AppConfig.twitter["activate"] && request.referrer =~ %r{^https?://(www\.){0,1}twitter\.com}
                .flash
                  .message.notice.highlight_for_user{:style => "padding: 8px 4px; font-weight: bold"}
                    =t(".welcome_from")
                    =link_to t("sessions.new.with_twitter"), twitter_authorize_path, :title => "Twitter", :id => "twitter_auth", :class => "highlight_for_user"
                    =t(".now")
              -elsif with_facebook? && request.referrer =~ %r{^https?://(www\.){0,1}facebook\.com}
                .flash
                  .message.notice.highlight_for_user{:style => "padding: 8px 4px; font-weight: bold"}
                    =t(".welcome_from")
                    =link_to t("sessions.new.with_facebook"), oauth_authorize_path, :title => "Facebook", :id => "facebook_auth"
                    =t(".now")
                    
        = render "shared/ads/header_ads"
        #block-text.block
          .secondary-navigation{:class => @active_subtab.to_s}
            = yield :subtabs
            .clear
          .content
            %p.markdown
              = show_flash_messages(:class => "flash", :markdown => true)
  
            = render "shared/ads/content_ads"
            .inner
              = yield
              .clear
                
                
      %section.right-panel
        #sidebar
          temp links
          = link_to "Random question", random_questions_path(:unanswered => true)
          = yield :sidebar

          = render "shared/ads/context_panel_ads"

          -unless feed_urls.empty?
            .block
              %h3
                = t(".subscribe")
              .sidebar-block
                .feeds
                  -feed_urls.each do |title, url|
                    .feed_entry
                      %a{:href => url}
                        %span
                          =image_tag "atom.png", :width => 20
                        =h(title)
                  .clear
        .clear
        = render "shared/ads/footer_ads"

    #footer
      = render "shared/layout/websocket"
      .block.content
        = render "shared/layout/footer"
