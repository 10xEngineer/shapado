!!! Strict
%html{ "xml:lang" => I18n.locale, :lang => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    = render :partial => "layouts/head"
    = stylesheet_link_tag 'compiled/errors.css', :media => 'screen, projection'

  %body
    #top_bar
      = render :partial => "shared/topbar"
    - if logged_in?
      .feedback
        =link_to "Feedback", feedback_path, :id => "feedback"
    .two-column
      -if !AppConfig.system_notice.blank?
        #system-msg
          .internal
            = AppConfig.system_notice
      #header
        .feedbackform.hide
          = render :partial => "welcome/feedback"
      .clear
      #main-content
        #layout
          #content{:style=>"width: 100%"}
            = yield
      #footer
        = render :partial => "layouts/footer"
      = render :partial => "shared/googlean"
      .clear

