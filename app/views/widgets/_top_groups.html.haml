.module
  %h3 
    =t(".title")
  -widget.top_groups.each do |group|    
    %section
      =link_to image_tag "group-avatar.gif"
      %p 
        %b
          = link_to h(group.name), domain_url(:custom => group.domain)
        %i 300 Miembros
        %br
        &= truncate(strip_tags(group.description), :length => 35)
        =link_to t("scaffold.more"), groups_path
  %footer
    =link_to "Ver todos los grupos", "#"
  .clear

