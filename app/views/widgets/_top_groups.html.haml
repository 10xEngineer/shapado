.module.widget.block{:class => 'widget-top_groups'}
  = render "widgets/header", :widget => widget
  - widget.top_groups.each do |group|
    %aside
      .avatar
        = link_to image_tag(logo_path(group, "medium")), domain_url(:custom => group.domain)

      .data
        %h5
          %b
            = link_to h(group.name), domain_url(:custom => group.domain)
          %small
            - if group.memberships.count == 0
              = I18n.t('widgets.top_groups.no_members')
            - elsif group.memberships.count == 1
              = I18n.t('widgets.top_groups.one_member')
            - elsif group.memberships.count > 1
              = I18n.t('widgets.top_groups.members_count', :count => group.memberships.count)
        %p
          &= truncate(strip_tags(group.description), :length => 50)

  %footer
    =link_to t("scaffold.more"), groups_path
.clear