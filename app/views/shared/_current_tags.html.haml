
-unless current_tags.nil?
  .block
    %h3
      =t(".title")
    .tag-list
      -current_tags.each do |tag|
        %span.tag
          = link_to h(tag), url_for(:language => current_languages, :tags => tag)
          = link_to "-", url_for(:language => current_languages, :tags => (current_tags - [tag]).join("+")), :class => "remove_tag"
    .clear
