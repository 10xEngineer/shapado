-if current_group.language.blank?
  .block
    %h3
      = t(:language_filter, :scope => "activerecord.attributes.user")
    .content
      -form_for current_user, :url => change_language_filter_user_path(current_user), :html => {:class => "form"} do |f|
        = hidden_field_tag :source, request.path
        = f.select :language_filter, languages_options(User::LANGUAGE_FILTERS), {:selected => current_user.language_filter}, :class => "select"
        = submit_tag t("scaffold.save"), :class => "button"
