- if logged_in?
  %h3
    =t("widgets.suggestions.title", :group => current_group.name)
  .content
    %ul.list
      -current_user.suggestions(limit).each do |suggestion|
        %li
          .gravatar
            = suggestion_avatar(suggestion)
          .item
            = link_to h(suggestion.login), user_path(suggestion)
          .item
            = link_to "+ #{t("users.show.follow")}", follow_user_path(suggestion), :class => "follow_link", 'data-class' => "unfollow_link", 'data-title' => t("users.show.unfollow"), 'data-undo' => unfollow_user_path(suggestion)
        %li
          = common_follower(current_user, suggestion)
