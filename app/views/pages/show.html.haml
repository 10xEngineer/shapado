-content_for :head do
  -if @page.has_css?
    %link{:href => css_page_path(@page),  :rel => "stylesheet", :media => "screen", :type => "text/css"}

  -if current_group.has_custom_js && @page.has_js?
    %script{:src => js_page_path(@page), :type => "text/javascript"}

-content_for :subtabs do
  %h1.navtitle.title
    &= @page.title

-content_for :sidebar do
  -if @page.wiki
    .block
      %h3
        Actions
      .content
        %ul.navigation
          %li
            = link_to "Create new page", new_page_path
          %li
            = link_to "Edit page", edit_page_path(@page)

.markdown
  -if safe_page?(@page)
    = RDiscount.new(render_page_links(@page.body)).to_html
  -else
    = markdown(@page.body)
