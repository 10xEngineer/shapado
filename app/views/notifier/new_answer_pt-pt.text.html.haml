
%p
  == Hi #{h(@user.login)},
  %br
  = h(@answer.user.login)
  answered:
  = find_and_preserve("<pre style='font-size:20px'>"+ h(@answer.body)+"</pre>")
  to the question
  = link_to h(@question.title), url_for(:host => AppConfig.domain, :controller => "questions", :action => "show", :id => @question.slug)
