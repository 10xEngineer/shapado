-if !@questions.empty?
  %h1
    Questions
  %ul
    -@questions.each do |question|
      %li{:style => "border-bottom: 1px solid grey"}
        %strong
          = link_to h(question.title), question_path(question)
        %br
        = truncate(question.body, :length => 400)

-if !@answers.empty?
  %h1
    Answers
  %ul
    -@answers.each do |answer|
      %li{:style => "border-bottom: 1px solid grey"}
        %strong
          = link_to h(answer.question.title), question_path(answer.question, :anchor => answer.id)
        %br
        = truncate(answer.body, :length => 400)
