
%h1
  &= @group.name
  Group

= link_to t("views.groups.visit_group"), subdomain_url(@group.subdomain)
%br
= image_tag(logo_group_path(@group))


%p
  &= @group.description
  %br
  %b= t("views.groups.group_categories")
  &= @group.categories.join(", ")
  %br
  -if @group.owner.login
    %b= t("views.groups.group_created_by")
    = link_to h(@group.owner.login), user_path(@group.owner)

  %br
  -case @group.state
    -when "pending"
      .message.warn
        .internal
          = t("views.groups.group_awaiting_acceptance")
    -when "close"
      .message.warn
        .internal
          = t("views.groups.group_closed")

.buttons
  = link_to t("scaffold.edit"), edit_group_path(@group), :class => "button"
  = link_to t("scaffold.back"), groups_path, :class => "cancel button"
  -if logged_in?
    -if current_user.moderator? && @group.state == "pending"
      = link_to t("views.groups.accept_group"), accept_group_path(@group), :class => "button"
    -if current_user.can_modify?(@group) && @group.state == "active"
      = link_to t("views.groups.close_group"), close_group_path(@group), :class => "cancel button"
