
.group
  = form.label :name, t('.name'), :class => "label"
  = form.text_field :name, :class => "text_field"

.group
  = form.label :subdomain, "URL", :class => "label"
  %div
    %span.description
      ="#{request.protocol}"
    = form.text_field :subdomain, :class=>"text_field"
    %span.description
      = ".#{request.domain}"

-if current_user.admin?
  .group
    = form.label :domain, "Domain", :class => "label"
    %span.description
      =request.protocol
    = form.text_field :domain, :class=> "text_field"
  .group
    = form.check_box :isolate, :class => "left"
    = form.label :isolate, "isolate the group form other groups", :class => "label"
  .group
    = form.check_box :private, :class => "left"
    = form.label :private, "Only the group's members will be able to access this group", :class => "label"
  .group
    = form.check_box :has_custom_analytics, :class => "left"
    = form.label :private, "Allow Custom Analytics", :class => "label"
    .description
      The group will be able to use its own tracking code

- if @group.has_custom_analytics
  .group
    = form.label :analytics_engine, "Analytics Engine", :class => "label"
    =  select("group", "analytics_vendor", [['Google Analytics', 'googlean']])

  .group
    = form.label :analytics_id, "Website Analytics ID", :class => "label"
    = form.text_field :analytics_id, :class=> "text_field"

.group
  = form.label :description, t('.description'), :class => "label"
  = form.text_area :description, :class => "text_area", :id => "markdown_editor"
  .description
    = t('.description_legend')
  %label.label
    = t("global.preview")
  #markdown_preview.markdown


.group
  = form.label :legend, t('.legend'), :class => "label"
  = form.text_field :legend, :class => "text_field"
  .description
    = t('.legend_legend')

.group
  = form.label :default_tags, t('.default_tags'), :class => "label"
  = form.text_field :default_tags, :value => @group.default_tags.join(", "), :class => "text_field"
  .description
    = t('.default_tags_legend')

.group
  = form.label :language, t(:language, :scope => "activerecord.attributes.group"), :class => "label"
  -AVAILABLE_LANGUAGES.each do |lang|
    = form.radio_button :language, lang, :checked => @group.language == lang
    = language_desc(lang)
  = form.radio_button :language, "none", :checked => @group.language.nil?
  = t(".any_language")

.group
  = form.label :logo_data, t(".logo"), :class => "label"
  -unless @group.new?
    = image_tag(logo_group_path(@group))
  %br
  = form.file_field :logo_data
  .description
    = t('.logo_legend')
