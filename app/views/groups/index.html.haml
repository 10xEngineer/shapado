
#groups.subtitle{:class => @state}
  Groups
  .right.tabs
    .tab.active
      = link_to t("views.groups.actives"), groups_path(:tab=>"actives")
    .tab.pending
      = link_to t("views.groups.pendings"), groups_path(:tab=>"pendings")


%ul
  -@groups.each do |group|
    %li.list-item
      %span
        -if group.state == "active"
          = link_to image_tag(logo_group_path(group), :style => "height: 64px; width: 128px; vertical-align: top"), subdomain_url(group.subdomain)
        -else
          = image_tag(logo_group_path(group), :style => "height: 64px; width: 128px; vertical-align: top")
      %span
        -if group.state == "active"
          = link_to h(group.name), subdomain_url(group.subdomain)
        -else
          &= group.name
        &= group.description
      %span.buttons.right
        = link_to t("views.groups.about"), group, :class => "button"
        -if logged_in?
          -if current_user.can_modify?(group)
            = link_to t("scaffold.edit"), edit_group_path(group), :class => "button"
            -if group.state == "active"
              = link_to t("views.groups.close"), close_group_path(group), :class => "cancel button"
          -if current_user.admin?
            = link_to t("scaffold.destroy"), group, :confirm => 'Are you sure?', :method => :delete, :class => "button cancel"
          -if current_user.moderator? && group.state == "pending"
            = link_to t("views.groups.accept_group"), accept_group_path(group), :class => "button"
      .clear
=will_paginate @groups

.buttons
  = link_to 'Request a new group', new_group_path, :class => "button"

