-content_for :subtabs do
  .navtitle
    =t(".title")
  %ul
    %li.constrains
      = link_to t(".constrains"), manage_reputation_path(:tab => "constrains")
    %li.rewards
      = link_to t(".rewards"), manage_reputation_path(:tab => "rewards")

-if @active_subtab != "rewards"
  %h2.title
    =t(".reputation_constrains_subtitle")

  .description
    =t(".reputation_constrains_description")

  #reputation_form{:style => "width: 30%"}
    -form_for(@group, :html => {:class => "form", :multipart => true}) do |f|
      = f.error_messages
      = render :partial => "groups/reputation_constrains_form", :object => f
      .group.navform
        = f.submit t('scaffold.update')
-else
  %h2.title
    =t(".reputation_rewards_subtitle")

  .description
    =t(".reputation_rewards_description")

  #reputation_form{:style => "width: 30%"}
    -form_for(@group, :html => {:class => "form", :multipart => true}) do |f|
      = f.error_messages
      = render :partial => "groups/reputation_rewards_form", :object => f
      .group.navform
        = f.submit t('scaffold.update')
