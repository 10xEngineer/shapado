-last_read_on = 2.days.ago
-activities = Activity.desc(:created_at).where(:group_id => current_group.id, :created_at.gte => last_read_on).page(1).per(10)
%ul.notifications-list.menubar
  %li
    %a{:href => "#"}
      =activities.count
    %ul
      %li.notification
        %h3
          Notifications
      -activities.each do |activity|
        = render "notifications/notification_item", :activity => activity
